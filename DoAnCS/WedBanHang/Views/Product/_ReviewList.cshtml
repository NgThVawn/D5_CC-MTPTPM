@model List<WebBanHang.Models.Review>
@{
    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}

@if (Model == null || !Model.Any())
{
    <p class="text-muted">Chưa có đánh giá nào cho sản phẩm này.</p>
}
else
{
    for (int i = 0; i < Model.Count; i++)
    {
        var review = Model[i];
        var isOwner = review.ApplicationUserId == currentUserId;

        <div class="position-relative py-4 review-card d-flex"
             data-rating="@review.Rating"
             data-has-image="@(review.Images != null && review.Images.Any() ? "true" : "false")"
             data-has-comment="@(!string.IsNullOrWhiteSpace(review.Comment) ? "true" : "false")">

            <!-- Avatar -->
            <div class="me-3">
                <img src="@review.ApplicationUser.AvatarUrl"
                     alt="Avatar"
                     class="rounded-circle border"
                     style="width: 48px; height: 48px; object-fit: cover;" />
            </div>

            <!-- Nội dung -->
            <div class="flex-grow-1 pe-5">
                <div class="d-flex justify-content-between align-items-start mb-1">
                    <strong class="fs-6">@review.ApplicationUser.FullName</strong>

                    <div class="dropdown position-absolute top-0 end-0 me-2 mt-2">
                        <a href="#" class="text-dark" data-bs-toggle="dropdown">
                            <i class="fas fa-ellipsis-vertical"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            @if (isOwner)
                            {
                                <li>
                                    <button class="dropdown-item text-warning"
                                            onclick='openEditModal(@review.Id, @review.Rating, `@review.Comment`, @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(review.Images.Select(i => i.Url))))'>
                                        Sửa
                                    </button>
                                </li>
                                <li>
                                    <button class="dropdown-item text-danger" onclick="confirmDelete(@review.Id)">Xoá</button>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <button class="dropdown-item text-danger" onclick="openReport(@review.Id)">Báo cáo</button>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

                <!-- Sao -->
                <div class="mb-2">
                    @for (int star = 1; star <= 5; star++)
                    {
                        if (star <= review.Rating)
                        {
                            <i class="fa-solid fa-star text-warning"></i>
                        }
                        else
                        {
                            <i class="fa-regular fa-star text-warning"></i>
                        }
                    }
                </div>

                <!-- Bình luận -->
                @if (!string.IsNullOrWhiteSpace(review.Comment))
                {
                    <p class="mb-2">@review.Comment</p>
                }

                <!-- Ảnh -->
                @if (review.Images != null && review.Images.Any())
                {
                    <div class="d-flex flex-wrap gap-2 mb-2">
                        @foreach (var img in review.Images)
                        {
                            <img src="@img.Url"
                                 class="rounded border global-review-image"
                                 style="width: 100px; height: 100px; object-fit: cover; cursor: pointer;" />
                        }

                    </div>
                }
            </div>

            <small class="text-muted position-absolute bottom-0 end-0 me-2 mb-2" style="font-size: 13px;">
                @review.CreatedAt.ToString("HH:mm dd/MM/yyyy")
            </small>
        </div>

        @if (i < Model.Count - 1)
        {
            <hr class="my-2 review-separator" />
        }
    }
    @if (ViewBag.TotalPages != null && ViewBag.CurrentPage != null && ViewBag.TotalPages > 1)
    {
        int currentPage = (int)ViewBag.CurrentPage;
        int totalPages = (int)ViewBag.TotalPages;
        int productId = Convert.ToInt32(ViewBag.ProductId);

        <nav class="mt-3">
            <ul class="pagination justify-content-center custom-pagination">

                <!-- Mũi tên trái -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="javascript:void(0);" onclick="loadReviewPage(@(currentPage - 1))">
                        <i class="fa fa-angle-left"></i>
                    </a>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="javascript:void(0);" onclick="loadReviewPage(@i)">@i</a>
                    </li>
                }

                <!-- Mũi tên phải -->
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="javascript:void(0);" onclick="loadReviewPage(@(currentPage + 1))">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
}



@using WebBanHang.ViewModels
@model UserDashboardViewModel

<div class="bg-white rounded shadow-sm p-3 mb-4">
    <div class="d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center">
            <img src="~/images/avatar.png" alt="Avatar" class="rounded-circle me-3" style="width: 60px;" />
            <div>
                <h5 class="mb-0 text-uppercase">@Model.FullName</h5>
                <small class="text-muted">@Model.Email</small>
            </div>
        </div>
        <a asp-action="EditProfile" class="btn btn-outline-primary btn-sm">✏️ Chỉnh sửa thông tin cá nhân</a>
    </div>
    <hr />
    <div class="d-flex justify-content-around text-center">
        <div>
            <div class="fw-bold fs-5">@Model.TotalOrders</div>
            <div class="text-muted">đơn hàng</div>
        </div>
        <div class="border-start border-end px-4">
            <div class="fw-bold fs-5">@Model.TotalRevenue.ToString("N0") đ</div>
            <div class="text-muted">Tổng tiền tích lũy từ 01/01/2024</div>
        </div>
    </div>
</div>

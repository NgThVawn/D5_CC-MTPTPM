@model WedBanHang.Models.Category

@{
    ViewData["Title"] = "Cập nhật danh mục";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    .form-section {
        background-color: #fff;
        padding: 2rem;
        border-radius: 0.75rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        max-width: 500px;
        margin: auto;
    }

    h2.section-title {
        font-weight: bold;
        color: #1f2937;
        margin-bottom: 1.5rem;
    }

    label {
        font-weight: 600;
    }
</style>

<div class="container py-5">
    <h2 class="section-title text-center">
        <i class="fa-solid fa-pen-to-square me-2 text-primary"></i> Cập nhật danh mục
    </h2>

    <div class="form-section">
        <form asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Tên danh mục</label>
                <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục..." />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left me-1"></i> Trở về
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-floppy-disk me-1"></i> Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

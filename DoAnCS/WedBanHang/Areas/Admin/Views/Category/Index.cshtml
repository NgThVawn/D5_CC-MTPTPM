@model IEnumerable<WedBanHang.Models.Category>

@{
    ViewData["Title"] = "Quản lý danh mục";
}
@if (TempData["DeleteError"] != null)
{
    <div id="delete-toast">@TempData["DeleteError"]</div>

    <script>
        setTimeout(function () {
            const toast = document.getElementById("delete-toast");
            if (toast) {
                toast.style.opacity = "0";
                setTimeout(() => toast.remove(), 1000);
            }
        }, 2500);
    </script>
}

<h2 class="fw-bold text-primary mb-4">
    <i class="bi bi-tags me-2"></i>Quản lý danh mục sản phẩm
</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Add" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Thêm danh mục
    </a>
</div>

<div class="table-responsive shadow-sm rounded bg-white p-3">
    <table id="categoryTable" class="table table-hover align-middle table-bordered" style="width: 100%;">
        <thead class="table-light">
            <tr>
                <th style="width: 70%;">Tên danh mục</th>
                <th style="width: 30%;">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div class="truncate-cell">@item.Name</div>
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Sửa">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <!-- Nút mở modal -->
                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
                                <i class="bi bi-trash"></i>
                            </button>

                            <!-- Modal xác nhận -->
                            <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@item.Id" aria-hidden="true">
                                <div class="modal-dialog" style="margin-top: 25vh;">
                                    <div class="modal-content">
                                        <form asp-action="DeleteConfirmed" asp-route-id="@item.Id" method="post">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteModalLabel-@item.Id">Xác nhận xóa</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                                            </div>
                                            <div class="modal-body">
                                                Bạn có chắc muốn xóa danh mục <strong>@item.Name</strong> không?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                <button type="submit" class="btn btn-danger">Xóa</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

    <style>
        .truncate-cell {
            display: inline-block;
            width: 100%;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            vertical-align: middle;
            line-height: 1.5rem;
        }

        td {
            vertical-align: middle !important;
        }

        /* DataTable styles */
        .dataTables_wrapper .dataTables_filter input {
            border-radius: 6px;
            padding: 0.4rem 0.75rem;
        }

        .dataTables_wrapper .dataTables_length select {
            border-radius: 6px;
        }

        #categoryTable td, #categoryTable th {
            padding: 1rem 1rem;
            vertical-align: middle;
        }

        #categoryTable tbody tr:hover {
            background-color: #f8f9fa;
        }

        #delete-toast {
            position: fixed;
            top: 40%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: #fff3cd; /* Vàng nhạt */
            color: #856404; /* Nâu nhạt */
            padding: 12px 24px;
            border: 1px solid #ffeeba;
            border-radius: 6px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
            z-index: 9999;
            opacity: 1;
            transition: opacity 1s ease;
            font-size: 0.95rem;
            max-width: 80%;
            text-align: center;
        }

    </style>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#categoryTable').DataTable({
                pagingType: 'full_numbers',
                order: [[0, 'asc']],
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/vi.json',
                    paginate: {
                        first: '«', previous: '‹', next: '›', last: '»'
                    }
                }
            });
        });
    </script>
}

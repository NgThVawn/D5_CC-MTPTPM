@model IEnumerable<WebBanHang.Models.ApplicationUser>
@using Microsoft.AspNetCore.Identity
@using WebBanHang.Models
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Quản lý người dùng";
    var search = ViewBag.Search as string ?? "";
}

<h2 class="fw-bold text-primary mb-4">
    <i class="bi bi-people-fill me-2"></i> Quản lý người dùng
</h2>

<div class="table-responsive shadow-sm bg-white rounded p-3">
    <table id="userTable" class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Email</th>
                <th>ID người dùng</th>
                <th>Họ tên</th>
                <th>SĐT</th>
                <th>Địa chỉ</th>
                <th>Trạng thái</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.Id</td>
                    <td>@user.FullName</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Address</td>
                    <td>
                        @if (user.IsBlocked)
                        {
                            <span class="badge bg-danger">Đã bị chặn</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Hoạt động</span>
                        }
                    </td>
                    <td>
                        <div class="d-flex flex-wrap gap-2">
                            <form asp-action="ToggleRestriction" method="post">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-sm @(user.IsRestricted ? "btn-warning" : "btn-outline-warning")">
                                    <i class="fa-solid fa-user-slash me-1"></i> @(user.IsRestricted ? "Bỏ hạn chế" : "Hạn chế")
                                </button>
                            </form>

                            <form asp-action="ToggleBlock" method="post">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-sm @(user.IsBlocked ? "btn-success" : "btn-outline-danger")">
                                    <i class="fa-solid @(user.IsBlocked ? "fa-unlock" : "fa-ban") me-1"></i> @(user.IsBlocked ? "Bỏ chặn" : "Chặn")
                                </button>
                            </form>

                            @if (await UserManager.IsInRoleAsync(user, "Admin"))
                            {
                                <form asp-action="RemoveRole" method="post">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <input type="hidden" name="role" value="Admin" />
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">
                                        <i class="fa-solid fa-arrow-down me-1"></i> Hạ Admin
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="AssignRole" method="post">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <input type="hidden" name="role" value="Admin" />
                                    <button type="submit" class="btn btn-sm btn-outline-success">
                                        <i class="fa-solid fa-arrow-up me-1"></i> Nâng Admin
                                    </button>
                                </form>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <style>
        .table td, .table th {
            vertical-align: middle;
            padding: 1rem;
            border-right: 1px solid #dee2e6; 
        }

            .table td:last-child,
            .table th:last-child {
                border-right: none; 
            }

        .badge {
            font-size: 0.85rem;
        }

        .dataTables_wrapper .dataTables_filter input {
            border-radius: 6px;
            padding: 0.4rem 0.75rem;
        }

        .dataTables_wrapper .dataTables_length select {
            border-radius: 6px;
        }

        .btn-sm {
            margin-bottom: 0.25rem;
        }
    </style>
}


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#userTable').DataTable({
                pagingType: 'full_numbers',
                order: [[0, 'asc']],
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/vi.json',
                    paginate: {
                        first: '«',
                        previous: '‹',
                        next: '›',
                        last: '»'
                    }
                },
                columnDefs: [
                    { orderable: false, targets: 6 }
                ]
            });
        });
    </script>
}

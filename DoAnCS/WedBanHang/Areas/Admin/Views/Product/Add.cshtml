@model WedBanHang.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Thêm sản phẩm";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    .form-section {
        background-color: #fff;
        padding: 2rem;
        border-radius: 0.75rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    h2.section-title {
        font-weight: bold;
        margin-bottom: 2rem;
        color: #1f2937;
    }

    label {
        font-weight: 600;
    }

    .btn-group-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 2rem;
    }

    .form-check-label {
        margin-left: 0.5rem;
    }
</style>

<div class="container py-5">
    <!-- Header -->
    <h2 class="section-title">
        <i class="fa-solid fa-circle-plus me-2 text-success"></i>@ViewData["Title"]
    </h2>

    <!-- Form -->
    <div class="form-section">
        <form asp-action="Add" method="post" enctype="multipart/form-data" novalidate>
            <div class="row g-4">
                <!-- Left Column -->
                <div class="col-lg-6">                  
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Tên sản phẩm</label>
                        <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm..." />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Price" class="form-label">Giá</label>
                        <input asp-for="Price" class="form-control" placeholder="Nhập giá..." />
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="StockQuantity" class="form-label">Tồn kho</label>
                        <input asp-for="StockQuantity" class="form-control" id="stockQuantityInput" min="0" />
                        <span asp-validation-for="StockQuantity" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label">Danh mục</label>
                        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                            <option value="">-- Chọn danh mục --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label for="imageUrl" class="form-label">Hình ảnh sản phẩm</label>
                        <input type="file" name="images" multiple class="form-control" />
                    </div>
                    <div class="form-check mt-2">
                        <input asp-for="IsAvailable" class="form-check-input" id="isAvailableCheckbox" />
                        <label asp-for="IsAvailable" class="form-check-label">Sẵn sàng bán</label>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="col-lg-6">
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Mô tả sản phẩm</label>
                        <textarea asp-for="Description" class="form-control" rows="14"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <!-- Submit & Cancel -->
            <div class="btn-group-actions">              
                <button type="submit" class="btn btn-success">
                    <i class="fa-solid fa-check me-1"></i> Thêm sản phẩm
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa-solid fa-xmark me-1"></i> Huỷ
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('Description');

        CKEDITOR.disableAutoInline = true;
        CKEDITOR.on('instanceReady', function (ev) {
            delete CKEDITOR.plugins.notification;
        });

        function updateIsAvailableState() {
            const stockInput = document.getElementById("stockQuantityInput");
            const isAvailableCheckbox = document.getElementById("isAvailableCheckbox");

            if (!stockInput || !isAvailableCheckbox) return;

            const quantity = parseInt(stockInput.value);
            if (isNaN(quantity) || quantity <= 0) {
                isAvailableCheckbox.checked = false;
                isAvailableCheckbox.disabled = true;
            } else {
                isAvailableCheckbox.disabled = false;
            }
        }

        document.addEventListener("DOMContentLoaded", function () {
            const stockInput = document.getElementById("stockQuantityInput");
            if (stockInput) {
                updateIsAvailableState();
                stockInput.addEventListener("input", updateIsAvailableState);
                stockInput.addEventListener("change", updateIsAvailableState);
            }
        });
    </script>
}

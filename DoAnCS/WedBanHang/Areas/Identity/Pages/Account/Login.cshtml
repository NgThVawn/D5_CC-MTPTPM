@page
@model LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 800px; border-radius: 12px;">
        <div class="row">
            <!-- Hình ảnh minh hoạ -->
            <div class="col-md-6 d-none d-md-flex justify-content-center align-items-center">
                <img src="/images/logo.png" alt="Login Illustration" class="img-fluid" style="max-height: 300px;">
            </div>

            <!-- Form đăng nhập -->
            <div class="col-md-6">
                <h3 class="text-center text-primary mb-3">Chào mừng trở lại!</h3>

                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" placeholder="Mật khẩu" />
                        <label asp-for="Input.Password">Mật khẩu</label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-2">Đăng nhập</button>

                    <div class="text-center small">
                        <a asp-page="./ForgotPassword">Quên mật khẩu?</a>
                        <br />
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Chưa có tài khoản? Đăng ký ngay</a>
                    </div>
                </form>

                <hr class="my-3" />

                @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <div class="text-center mb-2">Hoặc đăng nhập bằng</div>
                    <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-dark w-100 mb-2 d-flex align-items-center justify-content-center" name="provider" value="@provider.Name">
                                <img src="/images/gg-icon.png" alt="Google Icon" width="20" class="me-2" />
                                @provider.DisplayName
                            </button>
                        }
                    </form>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

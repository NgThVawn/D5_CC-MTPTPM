@page
@model ExternalLoginsModel
@{
    ViewData["Title"] = "Liên kết tài khoản mạng xã hội";
    ViewData["ActivePage"] = ManageNavPages.ExternalLogins;
}

<div class="container py-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    <partial name="_StatusMessage" for="StatusMessage" />

    @if (Model.CurrentLogins?.Count > 0)
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white fw-semibold">
                Các tài khoản đã liên kết
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var login in Model.CurrentLogins)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-link me-2 text-success"></i> @login.ProviderDisplayName</span>
                        @if (Model.ShowRemoveButton)
                        {
                            <form asp-page-handler="RemoveLogin" method="post" class="mb-0">
                                <input type="hidden" name="LoginProvider" value="@login.LoginProvider" />
                                <input type="hidden" name="ProviderKey" value="@login.ProviderKey" />
                                <button type="submit" class="btn btn-outline-danger btn-sm">Hủy liên kết</button>
                            </form>
                        }
                    </li>
                }
            </ul>
        </div>
    }

    @if (Model.OtherLogins?.Count > 0)
    {
        <div class="card shadow-sm">
            <div class="card-header bg-light fw-semibold">
                Thêm liên kết mới
            </div>
            <div class="card-body">
                <form id="link-login-form" asp-page-handler="LinkLogin" method="post">
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var provider in Model.OtherLogins)
                        {
                            <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name">
                                <i class="fab fa-@provider.Name.ToLower() me-1"></i> Liên kết với @provider.DisplayName
                            </button>
                        }
                    </div>
                </form>
            </div>
        </div>
    }
</div>

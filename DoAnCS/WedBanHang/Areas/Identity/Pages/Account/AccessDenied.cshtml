@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container d-flex justify-content-center align-items-center ">
    <div class="text-center">
        <div class="mb-4">
            <i class="bi bi-shield-lock-fill text-danger" style="font-size: 4rem;"></i>
        </div>
        <h1 class="text-danger fw-bold mb-3">@ViewData["Title"]</h1>
        <p class="text-muted fs-5 mb-4">Bạn không có quyền truy cập tài nguyên này.</p>
        <a href="/" class="btn btn-outline-primary px-4 rounded-pill">
            <i class="bi bi-arrow-left me-1"></i> Quay lại trang chủ
        </a>
    </div>
</div>
<style>
    /* Chỉ cần nếu bạn muốn thêm hiệu ứng mượt hoặc đậm hơn */
    .btn-outline-primary:hover {
        background-color: #0d6efd;
        color: white;
        border-color: #0d6efd;
    }

</style>
